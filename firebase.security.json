{
  "rules": {
    "users": {
      "$uid": {
        ".read": "null !== auth && $uid === auth.uid"
      },
      ".write": true
    },
    "projects": {
      ".read": true,
      ".write": "null !== auth",
      "$projectId": {
        ".write": "newData.child('uid').val() === auth.uid"
      }
    },
    "votes": {
      ".read": true,
      ".write": "null !== auth && (root.child('users/' + auth.uid).child('projectId').exists() || root.child('users/' + auth.uid).child('vip').exists())"
    },
    "settings": {
      ".read": true,
      ".write": "null !== auth && root.child('users/' + auth.uid).child('role').val() === 'ADMIN'"
    }
  }
}
